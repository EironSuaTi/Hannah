<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_top"
    tools:context=".DuracionPeriodo">

    <TextView
        android:id="@+id/txtDia"
        android:layout_width="364dp"
        android:layout_height="130dp"
        android:fontFamily="@font/dancing_script_r"
        android:gravity="center"
        android:text="¿Cuánto suele durar tu periodo?"
        android:textColor="#29035D"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:fontFamily="@font/raleway_m"
        android:gravity="center"
        android:text="Duración del periodo"
        android:textColor="#571089"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDia"
        app:layout_constraintVertical_bias="0.176" />

    <ImageView
        android:id="@+id/img_restarPeriodo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/numPeriodo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.177"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24" />

    <ImageView
        android:id="@+id/img_sumarPeriodo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numPeriodo"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.177"
        app:srcCompat="@drawable/ic_baseline_chevron_right_24" />

    <EditText
        android:id="@+id/numPeriodo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/asap_r"
        android:gravity="center"
        android:inputType="number"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintVertical_bias="0.177" />

    <Button
        android:id="@+id/btn_siguientePeriodo"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:background="@drawable/estilo_fondo_botones"
        android:fontFamily="@font/raleway_b"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="#AB5EA7"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="#F3E4F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <Button
        android:id="@+id/btn_nsncPeriodo"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:background="@drawable/estilo_fondo_botones"
        android:fontFamily="@font/raleway_r"
        android:text="No estoy segura"
        android:textAllCaps="false"
        android:textColor="#430140"
        android:textSize="13sp"
        app:backgroundTint="#ECEFF1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <ImageView
        android:id="@+id/btn_backPeriodo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24" />

</androidx.constraintlayout.widget.ConstraintLayout>