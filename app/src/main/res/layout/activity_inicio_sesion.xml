<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_inicio_sesion"
    tools:context=".InicioSesion">

    <ImageView
        android:id="@+id/btn_backBienvenidaI"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24" />

    <TextView
        android:id="@+id/txtDia"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:fontFamily="@font/dancing_script_r"
        android:gravity="center"
        android:text="Inicia Sesión"
        android:textColor="#29035D"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:background="@drawable/estilo_border_edittext"
        android:ems="10"
        android:fontFamily="@font/raleway_r"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="48dp"
        android:textColor="@color/black"
        android:textColorHint="#c8c8c8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <EditText
        android:id="@+id/editPsw"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/estilo_border_edittext"
        android:ems="10"
        android:fontFamily="@font/raleway_r"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingStart="48dp"
        android:textColor="@color/black"
        android:textColorHint="#c8c8c8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/editPsw"
        app:layout_constraintStart_toStartOf="@+id/editPsw"
        app:layout_constraintTop_toTopOf="@+id/editPsw"
        app:srcCompat="@drawable/ic_baseline_lock_24" />

    <ImageButton
        android:id="@+id/PswEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_psw_eye_off"
        app:layout_constraintBottom_toBottomOf="@+id/editPsw"
        app:layout_constraintEnd_toEndOf="@+id/editPsw"
        app:layout_constraintTop_toTopOf="@+id/editPsw"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/editEmail"
        app:layout_constraintStart_toStartOf="@+id/editEmail"
        app:layout_constraintTop_toTopOf="@+id/editEmail"
        app:srcCompat="@drawable/ic_baseline_email_24"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/btn_inicioSesion"
        android:layout_width="257dp"
        android:layout_height="48dp"
        android:background="@drawable/estilo_fondo_botones"
        android:fontFamily="@font/raleway_b"
        android:text="Iniciar Sesión"
        android:textAllCaps="false"
        android:textColor="#AB5EA7"
        app:backgroundTint="#F3E4F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPsw"
        app:layout_constraintVertical_bias="0.733" />

    <TextView
        android:id="@+id/contraOlvidada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="68dp"
        android:clickable="true"
        android:fontFamily="@font/raleway_r"
        android:minHeight="48dp"
        android:text="¿Se te olvidó la contraseña?"
        android:textColor="#29035D"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_inicioSesion" />

</androidx.constraintlayout.widget.ConstraintLayout>