<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pantallas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigation">
<!--        <item name="android:background">@drawable/estilo_degradado</item>-->
        <item name="itemIconTint">#AB5EA7</item>
        <item name="itemTextColor">#AB5EA7</item>
    </style>

    <style name="FondoLayout">
        <item name="android:background">@drawable/estilo_fondo_layout</item>
<!--        <item name="itemIconTint">@color/purple_500</item>-->
<!--        <item name="itemTextColor">@color/white</item>-->
    </style>

<!--    CalendarView-->
    <style name="CalendarViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#F3E4F2</item>
    </style>

    <style name="CalenderViewWeekCustomText">
        <item name="android:textColor">#AB5EA7</item>
    </style>

<!--    Datepicker-->
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#F9D1F7</item> <!-- Color del selector de fecha -->
        <item name="android:color">@color/white</item>
        <item name="android:background">#DFA9DC</item> <!-- Color de fondo del DatePicker -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Color del texto de la fecha seleccionada -->
        <item name="android:textColorSecondary">#AB5EA7</item> <!-- Color del texto de las fechas no seleccionadas (de los dias)-->

    </style>

    <style name="botonDatepicker">
        <item name="android:color">@color/white</item>
    </style>
</resources>